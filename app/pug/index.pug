            +product([{name: 'Product 4', price: '5€'}])
            +product([{name: 'Product 5', price: '1€'}])
            +product([{name: 'Product 6', price: '3€'}])
            +product([{name: 'Product 7', price: '3€'}, {name: 'Product 8', price: '4€'}, {name: 'Product 9', price: '1€'}, {name: 'Product 10', price: '3€'}, {name: 'Product 11', price: '4€'}, {name: 'Product 12', price: '1€'} ])
              
            
    
    
    block scripts
      script(src='../js/scripts.min.js')
    include includes/_footer.pug
    
